class Solution {
public:
    int longestValidParentheses(string s) {
        int open = 0, close = 0, res = 0;

        // Left to right
        for (int i = 0; i < s.length(); i++) {
            if (s[i] == '(') open++;
            else close++;

            if (open == close)
                res = max(res, 2 * close);
            else if (close > open)
                open = close = 0;
        }

        open = close = 0;
        // Right to left
        for (int i = s.length() - 1; i >= 0; i--) {
            if (s[i] == '(') open++;
            else close++;

            if (open == close)
                res = max(res, 2 * open);
            else if (open > close)
                open = close = 0;
        }

        return res;
    }
};

/*
L->R two case : 
1.open==close 
2.close>open : reinti

R->L vise versa 

this method runs in 0ms
